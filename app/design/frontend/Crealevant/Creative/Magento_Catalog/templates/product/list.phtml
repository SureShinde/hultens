$_themehelper = $this->helper('Crealevant\Relevant\Helper\Data');
$_hultenHelper = $this->helper('Crealevant\Hultens\Helper\Data');
$imageHelper = $block->getImageHelper();
$priceHelper = $block->getPricingHelper();
