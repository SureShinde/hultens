<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
			<resource id="Magento_Backend::admin">
				<resource id="Magento_Backend::Crealevant" title="Hello World">
					<resource id="Crealevant_Lookbook::lookbook" title="Lookbook" sortOrder="10">
						<resource id="Crealevant_Lookbook::manage_lookbook" title="Manage Lookbook" sortOrder="10" />
						<resource id="Crealevant_Lookbook::manage_slider" title="Manage Slider" sortOrder="20" />
					</resource>
				</resource>

				<resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings" title="Hello World">
                        <resource id="Magento_Config::config" title="Hello World">
							<resource id="Crealevant_Lookbook::config_lookbook" title="Lookbook Setting" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
