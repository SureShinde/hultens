<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- Add new Tab -->
        <tab id="settings" translate="label" sortOrder="200">
            <label>Relevant</label>
        </tab>
        <section id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Settings</label>
            <tab>settings</tab>
            <resource>Crealevant_Relevant::config_settings</resource>
            <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="reviewson" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Reviews On</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="bodyfont" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Body Font Family</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Font</source_model>
                </field>
                <field id="paragraphsize" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Paragraph Font Size</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Paragraph</source_model>
                </field>
                <field id="paragraphfont" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Paragraph Font Family</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Font</source_model>
                </field>
                <field id="paragraphfontline" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Paragraph Font Line Height</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Line</source_model>
                </field>
                <field id="headingfont" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>h1 Font Family</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Font</source_model>
                </field>
                <field id="customcss" translate="label" type="textarea" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Custom CSS</label>
                </field>
            </group>
            <group id="header" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Header</label>
                <field id="headertype" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Header Type</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\HeaderType</source_model>
                </field>
                <field id="sticky" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Sticky Header</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="topbar" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Display Topbar</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="topbarleft" translate="label" type="textarea" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Topbar left</label>
                </field>
                <field id="topbarmiddle" translate="label" type="textarea" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Topbar Middle</label>
                </field>
            </group>
            <group id="navigation" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Navigation</label>
                <field id="stickynav" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Sticky Nav</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="stickynavmobile" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Nav mobile Sticky</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="slidingsubmenus" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Nav mobile slidingSubmenus</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="navmobileposition" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Nav mobile Position</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Position</source_model>
                </field>
                <field id="navmobilepush" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Nav mobile push</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="filter" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Filter</label>
                <field id="slidingsubmenus" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Mobile slidingSubmenus</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mobileposition" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Mobile Position</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Position</source_model>
                </field>
                <field id="navmobilepush" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Mobile push</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="minicart" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Minicart</label>
                <field id="type" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Type</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Minicart</source_model>
                </field>
                <field id="rounded_corners" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Rounded Corners (if from right)</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mobiletype" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Mobile Type</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\MinicartMobile</source_model>
                </field>
                <field id="addedtocart" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Added to cart Position</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\AddedCartPosition</source_model>
                </field>
            </group>
            <group id="footer" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Footer</label>
                <field id="backtotop" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Use Back to top</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="paymentmethods" translate="label" sortOrder="350" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Show Payment Methods</label>
                    <frontend_model>Crealevant\Relevant\Block\FooterPaymentMethod</frontend_model>
                </field>
            </group>
            <group id="productpage" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Product Page</label>
                <field id="quantity_field" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Quantity field</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="categorypage" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Category Page</label>
                <field id="columns" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Desktop Columns</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Columns</source_model>
                </field>
                <field id="columns_ipad" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>iPad Columns</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Columns</source_model>
                </field>
                <field id="columns_mobile" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Mobile Columns</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Columns</source_model>
                </field>
                <field id="swatches" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Swatches</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="add_to_cart_button" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Add To Cart Button</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="quickview" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Quickview</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="layout" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Responsive Layout</label>
                <field id="pagewidth" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Maximum Page Width</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Layout</source_model>
                </field>
            </group>
            <group id="maintenance" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Maintenance</label>
                <field id="maintenance_field" translate="label" type="select" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>On/Off</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="maintenance_ip" translate="label" type="textarea" sortOrder="1" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>maintenance ip (seperate with comma)</label>
                </field>
            </group>
            <group id="category_new_product" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Category for new products</label>
                <field id="category" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Category</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Category</source_model>
                </field>
            </group>
            <group id="category_special_product" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Category for special products</label>
                <field id="category" translate="label" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Category</label>
                    <source_model>Crealevant\Relevant\Model\Config\Source\Category</source_model>
                </field>
            </group>
        </section>
        <!-- another section -->
        <!-- another tab -->
        <section id="thecodingtutor_infinitescroll" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>InfiniteScroll</label>
            <tab>settings</tab>
            <resource>Crealevant_Relevant::config_infinitescroll</resource>
            <group id="basic_setting" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Basic Settings</label>
                <attribute type="expanded">1</attribute>


                <field id="enabled" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable InfiniteScroll</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="advance_settings" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Advance Settings</label>
                <attribute type="expanded">1</attribute>
                <field id="remove_pagination" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Remove Default Pagination</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="only_for_selected_screen" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable only in Particular Screen Width</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[If selected yes, then will work only in the defined screen width.]]></comment>
                </field>
                <field id="min_width" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Min. Width</label>
                    <depends>
                        <field id="*/*/only_for_selected_screen">1</field>
                    </depends>
                    <comment><![CDATA[Enter minimum screen width (in <strong>px</strong>). e.g. 10]]></comment>
                </field>
                <field id="max_width" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max. Width</label>
                    <depends>
                        <field id="*/*/only_for_selected_screen">1</field>
                    </depends>
                    <comment><![CDATA[Enter maximum screen width (in <strong>px</strong>). e.g. 768]]></comment>
                </field>
            </group>
        </section>
        <section id="catalog_price_decimal" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>catalog</tab>
            <resource>Crealevant_Relevant::config</resource>
            <label>Simple Price Decimal (Precision)</label>
            <group id="general" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="can_show_decimal" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <depends>
                        <field id="*/*/enable">1</field>
                    </depends>
                    <label>Show the decimal?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="price_precision" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Decimal Length</label>
                    <depends>
                        <field id="*/*/enable">1</field>
                    </depends>
                </field>
            </group>
        </section>
        <section id="cart" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>settings</tab>
            <resource>Crealevant_Relevant::cart_settings</resource>
            <label>Cart</label>
            <group id="general" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Amount left to free shipping</label>
                <field id="amount" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Amount</label>
                </field>
            </group>
        </section>
    </system>
</config>